str ="reverse"
def reverseWord(str):
        #your code here
        a=0
        b=len(str)-1
        lstr =list(str)
        while a<b:
            lstr[a],lstr[b]=lstr[b],lstr[a]
            a+=1
            b-=1
        
        return "".join(lstr)


ans = reverseWord(str)
print(ans)

str1 ='Please reverse the word'
def reverse_rec(str1):
      if len(str1) ==1:
            return str1
      else:
            return reverse_rec(str1[1:]) + str1[0]
print(reverse_rec(str1))